<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RegisterUser</servlet-name>
        <servlet-class>RegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUser</servlet-name>
        <servlet-class>VerifyUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCat</servlet-name>
        <servlet-class>ShowCat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProductList</servlet-name>
        <servlet-class>ShowProductList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDetails</servlet-name>
        <servlet-class>ShowDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSession</servlet-name>
        <servlet-class>EndSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddInCart</servlet-name>
        <servlet-class>AddInCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowShoppingCart</servlet-name>
        <servlet-class>ShowShoppingCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/RegisterUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUser</servlet-name>
        <url-pattern>/VerifyUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCat</servlet-name>
        <url-pattern>/ShowCat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProductList</servlet-name>
        <url-pattern>/ShowProductList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDetails</servlet-name>
        <url-pattern>/ShowDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSession</servlet-name>
        <url-pattern>/EndSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddInCart</servlet-name>
        <url-pattern>/AddInCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowShoppingCart</servlet-name>
        <url-pattern>/ShowShoppingCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
